<script type='text/javascript'>
  $(function() {
    Dashing.gridsterLayout('[{"col":1,"row":1},{"col":2,"row":1},{"col":3,"row":1},{"col":4,"row":1},{"col":1,"row":2},{"col":2,"row":2},{"col":3,"row":2}]')
  });
</script>

<% content_for(:title) { "Littlelines' Official Dashboard" } %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/logo.png"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Clock"></div>
      <i class="icon-time icon-background"></i>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="facebook" data-view="Meter" data-moreinfo="You need more friends!" data-title="Facebook" data-min="0" data-max="500"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="twitter" data-view="Meter" data-title="Twitter" data-min="0"
      data-max="500" data-moreinfo="Friends"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="gauges" data-view="Graph" data-title="Today"
      style="background-color:#47bbb3;" data-moreinfo="Past Month"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="sliqr" data-view="Number" data-title="Sliqr" style="background-color:#96bf48;"></div>
      <i class="icon-heart icon-background"></i>
    </li>
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="twitter_mentions" data-view="Comments" style="background-color:#ff9618;" data-moreinfo="Tweets tagged with <%= ENV['TWITTER_SEARCH_STRING'] %>">
      </div>
      <i class="icon-twitter icon-background"></i>
    </li>
  </ul>
